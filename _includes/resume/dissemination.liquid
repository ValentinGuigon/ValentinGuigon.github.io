<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign dissemination = data[1] | sort: 'releaseDate' | reverse %}
  {% for content in dissemination %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.releaseDate %}
            {% assign dateParts = content.releaseDate | split: '-' %}
            {% assign year = dateParts[0] %}
            {% assign month = dateParts[1] | default: '' %}
            {% assign day = dateParts[2] | default: '' %}
            <table class="table-cv">
              <tbody>
                <tr>
                  <td>
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                      {% if day %}{{ day }}.{% endif %}
                      {% if month %}{{ month }}.{% endif %}
                      {{ year }}
                    </span>
                  </td>
                </tr>
              </tbody>
            </table>
          {% else %}
            <table class="table-cv">
              <tbody>
                <tr>
                  <td>
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">Date N/A</span>
                  </td>
                </tr>
              </tbody>
            </table>
          {% endif %}
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.name }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.publisher }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
